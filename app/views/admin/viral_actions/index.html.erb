<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">바이럴 참여 목록</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>PC</th>
              <th>Mobile</th>
              <th>Blog</th>
              <th>페이스북</th>
              <th>카톡</th>
              <th>카카오스토리</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= ViralAction.pc.count %>
              </td>
              <td>
                <%= ViralAction.mobile.count %>
              </td>
              <td>
                <%= ViralAction.blog.count %>
              </td>
              <td>
                <%= ViralAction.facebook.count %>
              </td>
              <td>
                <%= ViralAction.kakao_talk.count %>
              </td>
              <td>
                <%= ViralAction.kakao_story.count %>
              </td>
              
            </tr>
          </tbody>
        </table>
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>참가자 이름</th>
              <th>소셜 플랫폼</th>
              <th>디바이스</th>
              <th>등록시간</th>
            </tr>
          </thead>
          <tbody>
            <% @actions.each do |action| %>
              <tr class="">
                <td>
                  <%= action.id %>
                </td>
                <td>
                  <%= action.user.name unless action.user.nil?%>
                </td>
                <td>
                  <%= action.platform %>
                </td>
                <td>
                  <%= action.device %>
                </td>
                <td class="updated_at">
                  <p><%= action.updated_at.strftime("%m.%d %H:%M") %></p>
                </td>
                <td>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>