<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">경품 선택 현황</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>경품</th>
              <th>참여자 수</th>
            </tr>
          </thead>
          <tbody>
            <% @gifts.each do |gift| %>
              <tr class="">
                <td>
                  <%= link_to gift.title, admin_gift_path(gift)%>
                </td>
                <td class="updated_at">
                  <p><%= gift.users.count %></p>
                </td>
              </tr>
            <% end %>
            <tr>
              <td>
                <%= link_to "바이럴 참여자", admin_gift_mobile_users_path %>
              </td>
              <td class="updated_at">
                <p><%= @mobile_users.count%></p>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
