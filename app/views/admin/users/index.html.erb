<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">참여자 목록</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <%= paginate @users %>
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th class="device">디바이스</th>
              <th class="count">페북</th>
              <th class="count">블로그</th>
              <th class="count">카톡</th>
              <th class="count">카스</th>
              <th class="name">참여자</th>
              <th>전화번호</th>
              <th>참여일시</th>
              <th>바이럴 점수</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="">
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= user.access_logs.last.device unless user.access_logs.empty? %>
                </td>
                <td>
                  <%= user.viral_actions.blog.count unless user.viral_actions.empty? %>
                </td>
                <td>
                  <%= user.viral_actions.facebook.count unless user.viral_actions.empty? %>
                </td>
                <td>
                  <%= user.viral_actions.kakao_talk.count unless user.viral_actions.empty? %>
                </td>
                <td>
                  <%= user.viral_actions.kakao_story.count unless user.viral_actions.empty? %>
                </td>                
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.phone unless user.phone.nil? %>
                </td>
                <td class="updated_at">
                  <p><%= user.updated_at.strftime("%m.%d %H:%M") %></p>
                </td>
                <td>
                  <%# url = "http://e3.minivertising.kr/#{@user.blog_code}" unless @user.blog_code.nil? %>
                  <%= user.viral_score %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
