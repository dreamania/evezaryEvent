<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">참여자 목록</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>참여자</th>
              <th>전화번호</th>
              <th>참여일시</th>
              <th>바이럴 점수</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="">
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= user.name %> <%= "*" unless user.access_logs.empty? %>
                </td>
                <td>
                  <%= user.phone unless user.phone.nil? %>
                </td>
                <td class="updated_at">
                  <p><%= user.updated_at.strftime("%m.%d %H:%M") %></p>
                </td>
                <td>
                  <%# url = "http://event3.evezary.co.kr/#{@user.blog_code}" unless @user.blog_code.nil? %>
                  <%= user.viral_score %>
                </td>
              </tr>
              <% unless user.viral_actions.empty? %>
                <tr>
                  <td>▸</td>
                  <td colspan="">
                    <p>바이럴 참여</p>
                  </td>
                  <td colspan="3">
                    <ul>
                    <% user.viral_actions.each do |action|%>
                      <li class="viral-actions">
                        <p><%= action.platform %>-<%= action.device%></p>
                      </li>
                    <% end %>
                    </ul>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
